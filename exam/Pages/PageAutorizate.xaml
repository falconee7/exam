<Page x:Class="exam.Pages.PageAutorizate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:exam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="PageAutorizate">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock TextAlignment="Center" Text="Введите логин"/>
            <TextBox Name="TxbLogin"/>
            <TextBlock TextAlignment="Center" Text="Введите пароль"/>
            <TextBox Name="TxbPassword"/>
            <Button Name="BtnLogin" Click="BtnLogin_Click" Content="Войти" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
